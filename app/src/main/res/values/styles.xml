<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="input">
        <item name="android:background">@drawable/background_input</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="input.search">
        <item name="height">56dp</item>
        <item name="android:textColorHint">@color/Basic_black_700</item>
        <item name="android:hint">@string/text_search</item>
        <item name="android:lines">1</item>
        <item name="maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="textInputStyle">@style/paragraph.h4</item>
    </style>

    <style name="heading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/Basic_blue_100</item>
        <item name="android:fontFamily">@font/montserrat_extra_bold</item>
    </style>

    <style name="heading.Title">
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">36sp</item>
        <item name="android:lineHeight" tools:targetApi="p">40dp</item>
    </style>

    <style name="title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/Basic_black</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="title.card">
        <item name="android:layout_height">15dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineHeight" tools:targetApi="p">15dp</item>
    </style>

    <style name="paragraph">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/Basic_black</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="paragraph.h1">
        <item name="android:layout_height">30dp</item>
        <item name="android:textSize">27sp</item>
        <item name="android:lineHeight" tools:targetApi="p">30dp</item>
    </style>

    <style name="paragraph.h4">
        <item name="android:layout_height">24dp</item>
        <item name="android:textSize">21sp</item>
        <item name="android:lineHeight" tools:targetApi="p">24sp</item>
    </style>

    <style name="paragraph.body1">
        <item name="android:layout_height">20dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:lineHeight" tools:targetApi="p">20dp</item>
    </style>

    <style name="paragraph.body2">
        <item name="android:layout_height">18dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineHeight" tools:targetApi="p">18dp</item>
    </style>

    <style name="FullFABStyle">
        <item name="fabSize">normal</item>
        <item name="maxImageSize">@dimen/design_fab_image_size</item>
        <item name="fabCustomSize">@dimen/design_fab_image_size</item>
    </style>

</resources>